@model Fiap.Exemplo02.MVC.Banco.Models.Aluno
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Aluno</h2>



@Helper.Message(TempData["msg"],"alert alert-success")


@using (Html.BeginForm())
{
<div class="form-group">
    @Html.LabelFor(a => a.Nome)
    @Html.TextBoxFor(a => a.Nome, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(a => a.DataNascimento)
    @Html.TextBoxFor(a => a.DataNascimento,new { @class="form-control", placeholder = "DD/MM/AAAA" })
</div>
<div class="form-group">
    @Html.CheckBoxFor(a => a.Bolsa, new { @class = "checkbox " })
    @Html.LabelFor(a => a.Bolsa)
    
</div>
<div class="form-group">
    @Html.LabelFor(a => a.Desconto)
    @Html.TextBoxFor(a => a.Desconto, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(a => a.Grupo)
    @Html.DropDownListFor(a => a.GrupoId,ViewBag.grupos as SelectList, "Selecione",new { @class = "form-control" })
</div>

<div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-info"/>
</div>

}