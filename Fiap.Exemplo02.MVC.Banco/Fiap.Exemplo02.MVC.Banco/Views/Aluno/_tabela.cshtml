@model List<Fiap.Exemplo02.Dominio.Models.Aluno>


@foreach (var aluno in Model)


{
    <tr>
        <td>@aluno.Nome</td>
        <td>@(aluno.Bolsa ? "Sim" : "Não")</td>
        <td>@aluno.Desconto</td>
        <td>@aluno.DataNascimento</td>

        @if (aluno.Grupo == null)
        {
            <td></td>
        }
        else
        {
            <td>@aluno.Grupo.Nome</td>
        }

        <td>
            <button style="visibility:hidden" onclick="alunoId.value = @aluno.Id" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                Excluir
            </button>
            @Html.ActionLink("Editar", "Editar", new { id = @aluno.Id }, new { @class = "btn btn-warning", style = "visibility:hidden" })
        </td>
    </tr>
}
@if (Request.IsAjaxRequest())
{
    <script>someBotao()</script>
}